.share-dialog
  width 600px
  color #000

  .disabled
    opacity 0.35

  .share-top-dialog
    padding 30px

  .share-status
    margin 30px
    font-size 32px
    text-align center

    a
      font-size 14px
      margin-left 10px

  .share-buttons
    align-items center
    display flex
    flex-direction row
    gap 20px
    justify-content space-evenly
    width 100%

    button
      modal-button()
      white-space nowrap
    .share-button-help-not-sharing
      line-height 16px
    .share-button-help-sharing
      line-height 16px

  .sharing-tabs
    clear both
    margin 30px 0 5px 0

    li
      list-style none
      margin 0
      display inline
      border 1px solid #000
      border-bottom none
      padding 5px
      cursor pointer
    .sharing-tab-embed
      border-left none
    .sharing-tab-selected
      background-color #ddd
      border-bottom 1px solid #ddd

  .sharing-tab-contents
    clear both
    padding 20px
    background-color #ddd
    border-top 1px solid #000
    border-bottom 1px solid #000

    .share-url-container
      align-items center
      display flex
      flex-direction row
      justify-content space-between

    .copy-button
      background-color #72bfca
      border-radius 5px
      color white
      font-weight bold
      padding 5px 10px
      margin-left 10px

      &:hover
        background-color darken(#72bfca, 30%)

    .social-icons
      margin-top 10px

      .social-icon
        display: inline-block
        margin-right 7px

        width: 32px
        height: 32px
        border-radius: 50%;

        position: relative;
        overflow: hidden;
        vertical-align: middle;

        .social-container
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
        .social-svg
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          fill-rule: evenodd;

        .social-svg-background,
        .social-svg-icon,
        .social-svg-mask
          transition: fill 170ms ease-in-out;
          fill: transparent;
        .social-svg-mask
          fill: #0f0b0b;

    input
      margin-top 10px
      margin-bottom 10px
      padding 5px
      width 100%
    input[type="checkbox"]
      width unset !important
      margin-bottom unset
    textarea
      border 1px solid rgb(118, 118, 118)
      border-radius 3px
      border-style inset
      margin-top 5px
      width 100%
      padding 5px
      height 75px

    .lara-settings
      margin-top 10px
      .codap-server-url
        width 68%
      .launch-button-text input
        width: 160px !important
        margin-left: 10px;
      input[type="checkbox"]
        margin-right: 10px;
        width: 10px !important

  .buttons
    clear both
    float right
    margin 10px

    button
      modal-button()
      margin-left 10px
    button.disabled
      background-color #777

  .longevity-warning
    margin 20px 30px