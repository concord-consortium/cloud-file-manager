.menu-bar
  font-family 'Roboto', 'Arial', 'sans-serif'
  font-size 14px
  font-weight 500
  letter-spacing 0.2px
  width 100%
  background-color #a5e3f6
  padding  8px 0px 8px
  color #222
  height menu-bar-height
  box-sizing border-box

  enable-flex(row)
  align-items center

  span, i
    padding-left 0.5em
    padding-right 0.5em
    vertical-align middle
    display inline-block

  .menu-bar-content-filename
    font-family 'Roboto', 'Arial', 'sans-serif'
    font-size 14px
    font-weight 500
    letter-spacing 0.2px
    color #222
    height 30px
    display flex
    align-items center
    flex 0 1 auto
    cursor pointer
    vertical-align middle
    no-select()
    border-radius: 4px;
    border: solid 1px #006c8e;

    &:hover
      background-color #d3f4ff

    .content-filename
      display flex
      align-items center
      padding 0
      width fit-content
      padding 0 10px

    input
      width 100%
      height 28px
      box-sizing border-box
      font-size 14px
      font-weight 500
      letter-spacing 0.2px
      font-family 'Roboto', 'Arial', 'sans-serif'
      border none
      outline none
      border-radius 4px
      padding 0 10px

  .menu-bar-file-status-alert
    label-font()
    background-color #f00
    padding 2px 7px
    -webkit-border-radius: 5px
    -moz-border-radius: 5px
    border-radius: 5px
    margin-left 20px

  .menu-bar-file-status-info
    font-style: italic

  .menu-bar-left, .menu-bar-right
    height 100%
    display flex
    align-items center
    flex: 0 0 auto

  .menu-bar-left
    .file-menu-button
      display: flex
      flex-direction: row
      align-items: center
      background-color: #a5e3f6
      border: none
      width: 66px
      height: 30px
      margin: 0 8px 0 10px
      padding: 0 8px 0 0
      border-radius: 4px
      box-sizing: border-box
      border: solid 2px transparent
      .default-anchor
        padding-right: 5px
      &:hover
        background-color: #d3f4ff
      &:active
        background-color: #eaf9ff
      &:focus
        border: solid 2px #0957d0

  .menu-bar-center
    display flex
    flex-direction row
    align-items center
    justify-content center
    flex 1 1 0%

  .menu-bar-right
    padding-left 0.5em
    padding-right 0.5em

    .menu-hidden, .menu-showing
      right 10px

  span.gdrive-user
    height 14px

  span.gdrive-icon
    background url("../../img/google-drive-16.png") no-repeat top left
    display inline-block
    width 16px
    height 16px
    padding 0
    position relative
    top -1px
    margin-right 3px

  span.document-store-icon
    background url("../../img/document-store-16.png") no-repeat top left
    display inline-block
    width 16px
    height 16px
    padding 0
    position relative
    top 3px

  // Customize default drop-down styles. Language menu is a bit more compact.
  .lang-menu
    &.with-border
      border #aaa 1px solid
      padding-right 5px
    no-select()
    .menu-showing
      min-width 50px

    .lang-option
      padding 0
      .flag
        vertical-align middle
        margin-right 10px
    .lang-label
      padding-right: 0.25em;
      margin-top: -11px
      background-image: url('../../img/language-icon.svg')
      background-repeat: no-repeat;
      padding-left: 21px;
      background-position: 4px 0;
      background-size: 13px;
