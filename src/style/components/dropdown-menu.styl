.menu
  display inline-block
  vertical-align middle
  padding-left 5px
  font-family 'Roboto', 'sans-serif'
  font-size 14px
  font-weight 500
  letter-spacing 0.2px
  color #222

.menu-hidden
  display none
.menu-showing
  display block

.menu-hidden, .menu-showing
  text-align center
  background none
  position fixed
  min-width 150px
  z-index 1000
  color #222
  ul
    font-weight 400
    text-align left
    display block
    margin-top 5px
    padding 2px
    list-style none
    box-shadow 0 2px 6px 2px rgba(0, 0, 0, 0.25)
    background #fff

  li.menuItem
    white-space nowrap
    display flex
    flex-direction row
    align-items center
    position relative
    padding: 0 10px 0 8px;
    height 30px
    width 100%
    box-sizing border-box
    min-width: 0
    cursor pointer
    transition all 0.2
    &.disabled
      color #222
      opacity: 0.35
    &.separator
      border-top 1px solid #ddd
      padding 0
      height 1px
      margin 6px
      width 92%
    .menu-list-icon
      height 18px
      width 18px
    .submenu-list-arrow
      height 26px
      width 26px
      transform rotate(270deg)
      position: absolute;
      right: 2px;

  li:hover
    background #e9e9e9
    &.disabled
      color #222
      background none
      cursor not-allowed
    &.separator
      background none

.sub-menu
  position absolute;
  left 130px !important;
  display flex
  flex-direction row

  ul
    margin 0
    width 197px
    font-family 'Roboto', 'sans-serif'
    font-size 14px
    font-weight 400
    letter-spacing 0.2px
    color #222

    li.menuItem
      white-space nowrap
      display flex
      flex-direction row
      align-items center
      position relative
      margin: 6px 0;
      padding: 0 10px 0 8px;
      height 30px
      width 100%
      box-sizing border-box
      min-width: 0
      cursor pointer
      transition all 0.2
      &.disabled
        color #222
        opacity: 0.35
      &.separator
        border-top 1px solid #ddd
        padding 0
        height: 1px
        margin 6px
        width 92%
      .menu-list-icon
        height 18px
        width 18px

    li:hover
      background #e9e9e9
      &.disabled
        color #222
        background none
        cursor not-allowed
      &.separator
        background none
    li:active
      background #e9e9e9

