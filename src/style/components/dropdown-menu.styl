.menu
  display inline-block
  vertical-align middle
  padding-left 5px

.menu-hidden
  display none
.menu-showing
  display block

.menu-hidden, .menu-showing
  font-size 13px
  text-align center
  background none
  position fixed
  min-width 150px
  z-index 1000
  color dark-blue
  ul
    text-align left
    display block
    margin-top 0.5em
    padding 4px
    list-style none
    box-shadow 0 0 5px rgba(0, 0, 0, 0.15)
    background #fff

  li.menuItem
    white-space nowrap
    display flex
    flex-direction row
    align-items center
    position relative
    margin 2px
    padding 4px
    cursor pointer
    transition all 0.2
    &.disabled
      color #aaa
      font-style italic
    &.separator
      border-top 1px solid #aaa
      padding 0
      height: 1px
      margin 4px
    .menu-list-icon
      height 18px
      width 18px
    .menu-item-content
      font-family Roboto
      font-size 14px
      letter-spacing 0.2px
      color #222
    .submenu-list-arrow
      height 24px
      width 24px
      transform rotate(270deg)
      position: absolute;
      right: 0;

  li:hover
    background #e9e9e9
    &.disabled
      color #aaa
      background none
      cursor not-allowed
    &.separator
      background none

.sub-menu
  position absolute;
  left 130px !important;
  width fit-content
